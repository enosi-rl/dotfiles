// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "use_system_path_prompts": true,
  "use_system_window_tabs": false,
  "agent": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-5"
    },
    "default_profile": "write",
    "always_allow_tool_actions": true
  },

  "features": {
    // Which edit prediction provider to use.
    "edit_prediction_provider": "copilot"
  },
  // Agent Panel Font Settings
  "agent_ui_font_size": 13.6,

  "colorize_brackets": true,

  // Whether the cursor blinks in the editor.
  "cursor_blink": false,

  "project_panel": {
    "hide_gitignore": true,
    "indent_size": 8
  },

  "title_bar": {
    "show_project_items": true,
    "show_branch_icon": true,
    "show_branch_name": true
  },

  "toolbar": {
    "breadcrumbs": true
  },
  // Remove the < > buttons from the tab bar
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false
  },

  // Show file type icons in the tab bar. Also color them according to the
  // git status.
  "tabs": {
    "file_icons": true,
    "git_status": true
  },

  // Workspace restoration behavior.
  //   All workspaces ("last_session"), last workspace ("last_workspace") or "none"

  "restore_on_startup": "last_session",
  // Whether to attempt to restore previous file's state when opening it again.
  // E.g. for editors, selections, folds and scroll positions are restored
  "restore_on_file_reopen": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "theme": {
    "mode": "dark",
    "light": "Nord Light",
    "dark": "Nord Dark"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },

  // UI Font. Use ".SystemUIFont" to use the default system font (SF Pro on macOS)
  "ui_font_family": "MonoLisa Variable",
  "ui_font_fallbacks": [".SystemUIFont"],
  "ui_font_weight": 100, // Font weight in standard CSS units from 100 to 900.
  "ui_font_size": 13.5,
  "ui_font_features": {
    // cursive 'f'
    "ss02": true,
    // plex-like braces
    "ss07": true,
    // nicer hex '0x'
    "ss11": true,
    // nicer '&'
    "ss14": true
  },

  // Buffer Font - Used by editor buffers
  "buffer_font_family": "MonoLisa Variable", // Font name for editor buffers
  "buffer_font_size": 12.8, // Font size for editor buffers
  "buffer_font_weight": 250, // Font weight in CSS units [100-900]
  // Line height "comfortable" (1.618), "standard" (1.3) or custom: `{ "custom": 2 }`
  "buffer_line_height": "comfortable",
  "buffer_font_features": {
    // cursive 'f'
    "ss02": true,
    // plex-like braces
    "ss07": true,
    // nicer hex '0x'
    "ss11": true,
    // nicer '&'
    "ss14": true
  },

  // Terminal Font Settings
  "terminal": {
    "dock": "right",
    "default_width": 1000, // NOTE: Need to double click on the terminal pane border to reset it if you've changed the width
    "font_family": "MonoLisa Variable",
    "font_size": 12.8,
    "font_weight": 100,
    // Terminal line height: comfortable (1.618), standard(1.3) or `{ "custom": 2 }`
    "line_height": "comfortable",
    "font_features": {
      // cursive 'f'
      "ss02": true,
      // plex-like braces
      "ss07": true,
      // nicer hex '0x'
      "ss11": true,
      // nicer '&'
      "ss14": true
    },
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "languages": {
    "Go": {
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Ruby": {
      "language_servers": ["solargraph"]
    }
  },

  "language_models": {
    "lmstudio": {
      "available_models": [
        {
          "name": "openai/gpt-oss-120b",
          "display_name": "gpt-oss-120b",
          "max_tokens": 128000,
          "supports_tool_calls": true,
          "supports_images": true
        }
      ]
    }
  },

  "soft_wrap": "editor_width",
  // Whether to start a new line with a comment when a previous line is a comment as well.
  "extend_comment_on_newline": false
}
